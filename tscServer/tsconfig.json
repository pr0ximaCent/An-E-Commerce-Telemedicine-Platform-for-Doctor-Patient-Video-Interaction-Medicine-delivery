{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./dist", // Output directory for transpiled JavaScript files
    "rootDir": "./src", // Source directory
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "include": [
    "./src/**/*.ts" // Include TypeScript files in the src directory
  ],
  "exclude": [
    "node_modules" // Exclude the node_modules directory
  ]
}
